.card.shadow
  .card-header
    .fa.fa-graduation-cap
    = link_to course.title, course_path(course)
    /= course.income
  - if course.avatar.attached?
    .card-img-top
      = link_to course_path(course) do
        = image_tag course.avatar, height: "auto", width: "100%"
        /= image_tag course.avatar, height: "200px", width: "100%"
        /= image_tag course.avatar.variant(resize_to_limit: [100, 100])
        /= image_tag course.avatar.variant(resize_to_fill: [320,240]).processed
  .card-footer
    %small= simple_format(course.marketing_description)
  .card-footer
    .text-center
      = enrollment_button(course)
      .row
      = review_button(course)
      .row
      = certificate_button(course)

  .card-footer
    .row
      .col-md-6
        .text-warning.fa.fa-star
        %b= course.average_rating
        /Enrollments count:
        /= course.enrollments.count
        /Counter cache enrollments count:
        (
        .fa.fa-user-graduate
        = course.enrollments_count
        )
        .fa.fa-tasks
        = course.lessons_count
      .col-md-6
        .text-right
          /.fa.fa-chalkboard-teacher
          /by
          - if course.user 
            - if course.user.image?
              = image_tag course.user.image, size: '20x20', alt: "#{course.user.email}", class: 'rounded-circle'
            = link_to course.user.username, user_path(course.user)
  /.card-footer
  /  .row
  /    .col-md-6
  /      .fa.fa-globe-africa
  /      = course.language
  /    .col-md-6
  /      .text-right
  /        .fa.fa-signal
  /        = course.level
  /.card-footer
  /  .row
  /    .col-md-6
  /      .far.fa-clock
  /      = course.created_at.strftime('%d-%b-%Y')
  /    .col-md-6
  /      .text-right
  /        .fa.fa-chalkboard-teacher
  /        = link_to course.user.username, user_path(course.user)
  - if current_user
    - if policy(course).owner?
      .card-footer
        = link_to 'Add lesson', new_course_lesson_path(course, @lesson), class: 'btn btn-primary btn-sm'
        = link_to course_course_wizard_index_path(course), class: 'btn btn-sm btn-warning mr-1' do
          .fa.fa-edit
          Editor
        = link_to analytics_course_path(course), class: 'btn btn-sm btn-info mr-1' do
          .fa.fa-chart-bar
          Analtycs
    - if policy(course).admin_or_owner?
      .card-footer
        .custom-control.custom-switch
          - if course.published?
            %input#customSwitch1.custom-control-input{:disabled => "disabled", :checked => "checked", :type => "checkbox"}/
          - else
            %input#customSwitch2.custom-control-input{:disabled => "disabled", :type => "checkbox"}/
          %label.custom-control-label{:for => "Published"} Published
        .row
        .custom-control.custom-switch
          - if course.approved?
            %input#customSwitch1.custom-control-input{:disabled => "disabled", :checked => "checked", :type => "checkbox"}/
          - else
            %input#customSwitch2.custom-control-input{:disabled => "disabled", :type => "checkbox"}/
          %label.custom-control-label{:for => "Approved"} Approved
        - if policy(course).approve?
          - if course.approved?
            = link_to 'unapprove', unapprove_course_path(course), method: :patch, class: 'btn btn-sm btn-outline-danger'
          - else
            = link_to 'approve', approve_course_path(course), method: :patch, class: 'btn btn-sm btn-outline-success'
      .card-footer
        - if policy(course).destroy?
          = link_to course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' do
            .fa.fa-trash
  - if course.tags.any?
    .card-footer
      - course.tags.each do |tag|
        .badge.badge-info
          = tag.name
